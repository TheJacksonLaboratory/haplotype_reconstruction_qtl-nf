//====================  Nextflow/Container Config  ==========

manifest {
    name = "SampleQC_Haplotype_Reconstruction"
    description = 'Pipeline for Performing Quality Checks and Haplotype Reconstruction on Genetically Diverse Mice'
    author = 'Sam Widmayer and Daniel Gatti, Copyright Jackson Laboratory 2023'
}

params {

  // Reference files for R/qtl2
  CC_DO_dataDir             = '/projects/compsci/vmp/USERS/widmas/haplotype_reconstruction_qtl-nf/bin/CC_DO_data'
  CC_DO_consensus_genos     = '${params.CC_DO_dataDir}/GigaMUGA_founder_consensus_genotypes.csv'
  
  CC_DO_consensus_Ygenos    = '${params.CC_DO_dataDir}/GigaMUGA_founder_consensus_genotypes_Y.csv'
  CC_DO_consensus_Mtgenos   = '${params.CC_DO_dataDir}/GigaMUGA_founder_consensus_genotypes_Mt.csv'
    
  // CC_DO_allele_codes        = '${params.CC_DO_dataDir}/GigaMUGA_allele_codes.csv'

  // Reference files for sample QC
  gm_ann                    = '/projects/omics_share/mouse/GRCm39/supporting_files/muga_annotation/gigamuga/gm_uwisc_v2.csv'
  CC_DO_mean_x_ints         = '${params.CC_DO_dataDir}/GigaMUGA_founder_mean_x_intensities.csv'
  CC_DO_mean_y_ints         = '${params.CC_DO_dataDir}/GigaMUGA_founder_mean_y_intensities.csv'  

}

singularity {
   enabled = true
   autoMounts = true
   cacheDir = 'singularity_cache'
 }

 process {
    executor = 'slurm'
    queue = 'compute'
    clusterOptions = {task.time < 72.h ? '-q batch' : '-q long'}
    module = 'slurm'
}

executor {
    $slurm {
        queueSize = 250
        // The number of tasks the executor will handle in a parallel manner
        submitRateLimit = '1 / 2 s'
        // Determines the max rate of job submission per time unit, for example '10sec' eg. max 10 jobs per second or '1/2 s' i.e. 1 job submissions every 2 seconds.
    }
}

env {
    NXF_ANSI_SUMMARY = true
    NXF_ANSI_LOG = true
    NXF_DEBUG = 2
}

trace {
    enabled = true
    file = "${params.pubdir}/trace/trace.txt"
    fields = \
         "task_id,"   \
       + "hash,"      \
       + "process,"   \
       + "tag,"       \
       + "status,"    \
       + "exit,"      \
       + "start,"     \
       + "container," \
       + "cpus,"      \
       + "time,"      \
       + "disk,"      \
       + "memory,"    \
       + "duration,"  \
       + "realtime,"  \
       + "queue,"     \
       + "%cpu,"      \
       + "%mem,"      \
       + "rss,"       \
       + "vmem,"      \
       + "rchar,"     \
       + "wchar"
}